rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read/write their own profile images
    match /users/{userId}/{imageType} {
      // Allow read access to any authenticated user (so they can view other profiles)
      allow read: if request.auth != null;

      // Allow write access only to the user's own images
      // imageType should be 'avatar.jpg' or 'banner.jpg'
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
